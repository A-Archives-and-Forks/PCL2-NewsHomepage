<local:MyCard Margin="0,0,0,15" Title="22w24a" CanSwap="True" IsSwaped="True">
		<!--Header-->
		<StackPanel Margin="30,40,30,20">
			<Border Style="{StaticResource verImgBdr}">
				<Border.Background>
					<ImageBrush ImageSource="https://www.lightbeacon.top/pnh/newimgs/1_19/22w24a.jpg" Stretch="Uniform" />
				</Border.Background>
				<Image Source="https://www.lightbeacon.top/pnh/newimgs/1_19/22w24a.jpg" Opacity="0" />
			</Border>
			<Border Style="{StaticResource verTxtBdr}">
				<TextBlock Style="{StaticResource verTxtBlk}" Text="22W24A" />
			</Border>

			<TextBlock Text="新内容" Style="{StaticResource h2}" />
			<StackPanel Style="{StaticResource ListStyle}" Margin="60,10,0,10">
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="添加了悦灵复制。" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="添加了玩家聊天举报。" />
			</StackPanel>

			<TextBlock Text="悦灵" Style="{StaticResource h3}" />
			<StackPanel Style="{StaticResource ListStyle}" Margin="60,10,0,10">
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="悦灵会对播放录音的唱片机跳舞。" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="如果悦灵拿着紫晶碎片，它会在跳舞时复制。复制行为有 2.5 分钟的冷却。" />
			</StackPanel>

			<TextBlock Text="玩家聊天举报" Style="{StaticResource h3}" />
			<StackPanel Style="{StaticResource ListStyle}" Margin="60,10,0,10">
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="现在可以举报玩家在游戏聊天中发送谩骂内容。" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="举报人须要选择包含恼人信息的单独聊天消息，以及举报的类别，这能为我们的管理组提供正确的语境。" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="可以在社交互动页面找到（默认与 P 键绑定）。" />
				<StackPanel Style="{StaticResource ListStyle}" Margin="60,10,0,10">
					<Ellipse />
					<TextBlock Style="{StaticResource ListItem}" Text="社交互动界面现在可以在多人游戏的暂停菜单中进入。" />
					<Ellipse />
					<TextBlock Style="{StaticResource ListItem}" Text="举报可以选择多个聊天消息。" />
					<Ellipse />
					<TextBlock Style="{StaticResource ListItem}" Text="聊天举报的类型可以从聊天举报分类中选择。" />
					<Ellipse />
					<TextBlock Style="{StaticResource ListItem}" Text="附加评论可以用于提供与举报有关的细节和信息。" />
				</StackPanel>
			</StackPanel>

			<TextBlock Text="本文来源于 希铁石z 发布于MCBBS上的译文" Style="{StaticResource footnote}" />
			<!--Logs-->
			<GroupBox Header="阅读完整日志" BorderBrush="{DynamicResource ColorBrush3}">
				<Grid UseLayoutRounding="True" Margin="10,10,10,10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="20*"></ColumnDefinition>
						<ColumnDefinition Width="10*"></ColumnDefinition>
						<ColumnDefinition Width="10*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<local:MyButton Style="{StaticResource Read0}" EventData="https://minecraft.fandom.com/zh/wiki/22w24a " ColorType="Highlight" />
					<local:MyButton Style="{StaticResource Read1}" EventData="https://www.mcbbs.net/thread-1351662-1-1.html" />
					<local:MyButton Style="{StaticResource Read2}" EventData="https://www.minecraft.net/zh-hans/article/minecraft-snapshot-22w24a" />
				</Grid>
			</GroupBox>
		</StackPanel>
	</local:MyCard>