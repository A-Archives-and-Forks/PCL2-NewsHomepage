<local:MyCard Margin="0,0,0,15" Title="1.19.1-rc1" CanSwap="True" IsSwaped="True">
		<!--Header-->
		<StackPanel Margin="30,40,30,20">
			<Border Style="{StaticResource verImgBdr}">
				<Border.Background>
					<ImageBrush ImageSource="https://www.lightbeacon.top/pnh/newimgs/1_19/1.19.1-rc1.jpg" Stretch="Uniform" />
				</Border.Background>
				<Image Source="https://www.lightbeacon.top/pnh/newimgs/1_19/1.19.1-rc1.jpg" Opacity="0" />
			</Border>
			<Border Style="{StaticResource verTxtBdr}">
				<TextBlock Style="{StaticResource verTxtBlk}" Text="1.19.1 RC1" />
			</Border>

			<TextBlock Text="更改" Style="{StaticResource h2}" />
			<StackPanel Style="{StaticResource ListStyle}" Margin="60,10,0,10">
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="更新了聊天信息举报选项的类型。" />
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="每次聊天信息举报发送的信息数量增加。" />
			</StackPanel>
			
			<StackPanel Style="{StaticResource ListStyle}" Margin="60,10,0,10">
				<Ellipse />
				<TextBlock Style="{StaticResource ListItem}" Text="run_command 点击事件不再支持直接发送信息。" />
				<StackPanel Style="{StaticResource ListStyle}" Margin="60,10,0,10">
					<Ellipse />
					<TextBlock Style="{StaticResource ListItem}" Text="现在仅支持命令。例如 /say 可以被使用。" />
					<Ellipse />
					<TextBlock Style="{StaticResource ListItem}" Text="这意味着其值现在必须带有 ‘/’ 前缀" />
				</StackPanel>
			</StackPanel>
			
			<TextBlock Text="本文来源于 Mithey 发布于MCBBS上的译文" Style="{StaticResource footnote}" />
			<!--Logs-->
			<GroupBox Header="阅读完整日志" BorderBrush="{DynamicResource ColorBrush3}">
				<Grid UseLayoutRounding="True" Margin="10,10,10,10">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="20*"></ColumnDefinition>
						<ColumnDefinition Width="10*"></ColumnDefinition>
						<ColumnDefinition Width="10*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<local:MyButton Style="{StaticResource Read0}" EventData="https://minecraft.fandom.com/zh/wiki/1.19.1-rc1 " ColorType="Highlight" />
					<local:MyButton Style="{StaticResource Read1}" EventData="https://www.mcbbs.net/thread-1354856-1-1.html" />
					<local:MyButton Style="{StaticResource Read2}" EventData="https://www.minecraft.net/zh-hans/article/minecraft-1-19-1-release-candidate-1" />
				</Grid>
			</GroupBox>
		</StackPanel>
	</local:MyCard>
