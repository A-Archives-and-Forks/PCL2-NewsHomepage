        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource ColorBrush7}" />
        <Setter Property="FontSize" Value="12px" />
