          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 最近发送的命令储存在游戏文件夹的 command_history.txt 内" />
        </StackPanel>
        <TextBlock Text="区块发包优化" Style="{StaticResource h3}" />
        <StackPanel Style="{StaticResource ListStyle}">
          <Ellipse />
