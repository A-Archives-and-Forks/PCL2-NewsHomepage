<StackPanel>
  <StackPanel Margin="0,-10,0,0">
    <!--Animations Starts-->
    <StackPanel.Triggers>
      <EventTrigger RoutedEvent="StackPanel.Loaded">
        <BeginStoryboard>
          <Storyboard x:Name="animation1" RepeatBehavior="Forever">
            <ColorAnimation Storyboard.TargetName="NewsHint" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="#FF000000" To="#FF000000" Duration="0:0:0" />
            <ColorAnimation BeginTime="0:0:5" Storyboard.TargetName="NewsHint" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="#FF000000" To="#00000000" Duration="0:0:1" />
            <ColorAnimation BeginTime="0:0:13" Storyboard.TargetName="NewsHint" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="#00000000" To="#FF000000" Duration="0:0:1" />
            <ColorAnimation Storyboard.TargetName="Hint2" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="#00000000" To="#00000000" Duration="0:0:0" />
            <ColorAnimation BeginTime="0:0:6" Storyboard.TargetName="Hint2" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="#00000000" To="#FF000000" Duration="0:0:1" />
            <ColorAnimation BeginTime="0:0:12" Storyboard.TargetName="Hint2" Storyboard.TargetProperty="(TextBlock.Foreground).(SolidColorBrush.Color)" From="#FF000000" To="#00000000" Duration="0:0:1" />
          </Storyboard>
        </BeginStoryboard>
      </EventTrigger>
    </StackPanel.Triggers>
    <!--Animations Ends-->
    <StackPanel.Resources>
      <!--Template Starts-->
      <!--Template Ends-->
      <!--Styles Starts-->
      <!--即将弃用-->
      <Style TargetType="Ellipse">
        <Setter Property="Fill" Value="{DynamicResource ColorBrush3}" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="Height" Value="8" />
        <Setter Property="Width" Value="8" />
        <Setter Property="Margin" Value="0,0,10,0" />
      </Style>
      <Style TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Black" />
      </Style>
      <Style x:Key="PGTextBlock" TargetType="TextBlock">
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="25,5,0,5" />
        <Setter Property="FontSize" Value="16" />
      </Style>
      <Style x:Key="ListItem" TargetType="TextBlock">
        <Setter Property="Margin" Value="10,-13.5,5,15" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="Black" />
      </Style>
      <Style x:Key="ListItemLink" TargetType="local:MyTextButton">
        <Setter Property="Margin" Value="15,-15,5,15" />
        <Setter Property="TextElement.FontSize" Value="20" />
      </Style>
      <Style x:Key="ListStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="22,0,14,5" />
      </Style>
      <Style x:Key="Read" TargetType="local:MyButton">
        <Setter Property="Margin" Value="0,0,5,5" />
        <Setter Property="Height" Value="35" />
        <Setter Property="Padding" Value="13,0,13,0" />
        <Setter Property="EventType" Value="打开网页" />
      </Style>
      <Style x:Key="Read0" TargetType="local:MyButton" BasedOn="{StaticResource Read}">
        <Setter Property="Grid.Column" Value="0" />
        <Setter Property="Text" Value="Minecraft Wiki" />
        <!--<Setter Property="ColorType" Value="Highlight"/>-->
      </Style>
      <Style x:Key="Read0+" TargetType="local:MyButton" BasedOn="{StaticResource Read0}">
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="Grid.ColumnSpan" Value="3" />
      </Style>
      <Style x:Key="Read1" TargetType="local:MyButton" BasedOn="{StaticResource Read}">
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="Text" Value="MCBBS" />
      </Style>
      <Style x:Key="Read1+" TargetType="local:MyButton" BasedOn="{StaticResource Read1}">
        <Setter Property="Grid.Column" Value="0" />
        <Setter Property="Grid.Row" Value="1" />
      </Style>
      <Style x:Key="Read2" TargetType="local:MyButton" BasedOn="{StaticResource Read}">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Text" Value="官网" />
      </Style>
      <Style x:Key="Read2+" TargetType="local:MyButton" BasedOn="{StaticResource Read2}">
        <Setter Property="Grid.Column" Value="1" />
        <Setter Property="Grid.Row" Value="1" />
      </Style>
      <Style x:Key="ReadR" TargetType="local:MyButton" BasedOn="{StaticResource Read}">
        <Setter Property="Grid.Column" Value="3" />
        <Setter Property="Text" Value="Reddit" />
      </Style>
      <Style x:Key="ReadR+" TargetType="local:MyButton" BasedOn="{StaticResource ReadR}">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Grid.Row" Value="1" />
      </Style>
      <Style x:Key="Code" TargetType="Border">
        <Setter Property="Background" Value="#e0e0e0" />
        <Setter Property="BorderBrush" Value="#444" />
        <Setter Property="CornerRadius" Value="1" />
        <Setter Property="Margin" Value="5,0,5,0" />
        <Setter Property="BorderThickness" Value="1" />
      </Style>
      <Style TargetType="TextBox">
        <Setter Property="Background" Value="{x:Null}" />
        <Setter Property="Padding" Value="3,0,3,0" />
        <Setter Property="IsReadOnly" Value="True" />
        <Setter Property="BorderBrush" Value="{x:Null}" />
      </Style>
      <Style x:Key="verImgBdr" TargetType="Border">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="4" />
        <Setter Property="VerticalAlignment" Value="Top" />
        <Setter Property="BorderBrush" Value="{DynamicResource ColorBrush3}" />
        <Setter Property="CornerRadius" Value="7" />
      </Style>
      <Style x:Key="verTxtBlk" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Foreground" Value="{DynamicResource ColorBrush7}" />
        <Setter Property="Width" Value="180" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontSize" Value="20" />
      </Style>
      <Style x:Key="imgTitle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="#FF777777" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0,0,0,15" />
      </Style>
      <Style x:Key="verTxtBdr" TargetType="Border">
        <Setter Property="Margin" Value="0,-20,-1,10" />
        <Setter Property="Background" Value="{DynamicResource ColorBrush3}" />
        <Setter Property="Width" Value="190" />
        <Setter Property="Height" Value="36" />
        <Setter Property="CornerRadius" Value="2" />
        <Setter Property="BorderThickness" Value="0,0,0,3" />
        <Setter Property="BorderBrush" Value="{DynamicResource ColorBrush2}" />
      </Style>
      <!--h2-->
      <Style x:Key="h2" TargetType="TextBlock">
        <Setter Property="FontSize" Value="24" />
        <Setter Property="Padding" Value="15,5" />
        <Setter Property="Margin" Value="5,15,5,10" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource ColorBrush3}" />
      </Style>
      <!--h3-->
      <Style x:Key="h3" TargetType="TextBlock">
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Padding" Value="30,0" />
        <Setter Property="Margin" Value="-10,0,10,17" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource ColorBrush4}" />
      </Style>
      <!--h4-->
      <Style x:Key="h4" TargetType="TextBlock">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="Padding" Value="30,0" />
        <Setter Property="Margin" Value="5,0,10,10" />
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="Foreground" Value="{DynamicResource ColorBrush4}" />
      </Style>
      <!--footnote-->
      <Style x:Key="footnote" TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Padding" Value="30,0" />
        <Setter Property="Margin" Value="0,20,0,15" />
        <Setter Property="Foreground" Value="#FF777777" />
        <Setter Property="TextWrapping" Value="Wrap" />
      </Style>
      <!--ButtonNameBorder-->
      <!--ImageButtonStyle-->
      <Style x:Key="ImgBtnImg" TargetType="Image">
        <Setter Property="MaxWidth" Value="70px" />
        <Setter Property="MaxHeight" Value="70px" />
        <Setter Property="Margin" Value="3" />
      </Style>
      <Style x:Key="ImgBtnBdr" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ColorBrush7}" />
        <Setter Property="BorderBrush" Value="{DynamicResource ColorBrush3}" />
        <Setter Property="BorderThickness" Value="2px" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Margin" Value="2px" />
      </Style>
      <Style x:Key="NameBdr" TargetType="Border">
        <Setter Property="Background" Value="{DynamicResource ColorBrush3}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="5,5,0,0" />
        <Setter Property="Margin" Value="-2,-2,-2,2" />
      </Style>
      <Style x:Key="ImgBtnTxt" TargetType="TextBlock">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Grid.Row" Value="0" />
        <Setter Property="Foreground" Value="{DynamicResource ColorBrush7}" />
        <Setter Property="FontSize" Value="12px" />
        <Setter Property="Margin" Value="8px,2px" />
      </Style>
      <!-- TEMPLATES -->
      <ControlTemplate x:Key="Separator" TargetType="ContentControl">
        <Grid Margin="0,0,0,15">
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="1*" />
          </Grid.ColumnDefinitions>
          <Line X1="0" X2="100" Stroke="{DynamicResource ColorBrush5}" StrokeThickness="1.5" HorizontalAlignment="Center" Stretch="Fill" Grid.Column="0" />
          <TextBlock Text="{TemplateBinding Content}" HorizontalAlignment="Center" FontSize="14" Foreground="{DynamicResource ColorBrush5}" Grid.Column="1" VerticalAlignment="Center" />
          <Line X1="0" X2="100" Stroke="{DynamicResource ColorBrush5}" StrokeThickness="1.5" HorizontalAlignment="Center" Stretch="Fill" Grid.Column="2" />
        </Grid>
      </ControlTemplate>
    </StackPanel.Resources>
    <Border Margin="0,0,0,10" Padding="2,8" BorderThickness="1" Background="{DynamicResource ColorBrush5}" CornerRadius="5" VerticalAlignment="Top" BorderBrush="{DynamicResource ColorBrush3}" Opacity="0.7">
      <Grid Margin="10,0,0,0">
        <TextBlock x:Name="NewsHint" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" Foreground="#FF000000">
                📰 新闻主页由 Light Beacon （最亮的信标）制作与维护。
    </TextBlock>
        <TextBlock x:Name="Hint2" FontWeight="Bold" FontSize="12" VerticalAlignment="Center" Foreground="#00000000">
                📰 新闻主页由 Light Beacon （最亮的信标）制作与维护。
    </TextBlock>
      </Grid>
    </Border>
    <local:MyCard Margin="0,0,0,15" Title="最新快照 - 23w32a" CanSwap="True" IsSwaped="False">
      <StackPanel Margin="30,40,30,20">
        <Border Style="{StaticResource verImgBdr}">
          <Border.Background>
            <ImageBrush ImageSource="https://www.lightbeacon.top/pnh/newsimgs/1_20/23w32a.png" Stretch="Uniform" />
          </Border.Background>
          <Image Source="https://www.lightbeacon.top/pnh/newsimgs/1_20/23w32a.png" Opacity="0" />
        </Border>
        <Border Style="{StaticResource verTxtBdr}">
          <TextBlock Style="{StaticResource verTxtBlk}" Text="23W32A" />
        </Border>
        <TextBlock Text="技术性更新，升级了资源包和数据包版本到17，没啥好看的......" Margin="20,5,0,5" />
        <GroupBox Header="阅读完整日志" BorderBrush="{DynamicResource ColorBrush3}">
          <Grid UseLayoutRounding="True" Margin="10,10,10,10">
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="20*" />
              <ColumnDefinition Width="12*" />
              <ColumnDefinition Width="12*" />
            </Grid.ColumnDefinitions>
            <local:MyButton Style="{StaticResource Read0}" EventData="https://minecraft.fandom.com/zh/wiki/23w32a" ColorType="Highlight" />
            <local:MyButton Style="{StaticResource Read1}" EventData="https://www.mcbbs.net/thread-1462843-1-1.html" />
            <local:MyButton Style="{StaticResource Read2}" EventData="https://minecraft.net/zh-hans/article/minecraft-snapshot-23w32a" />
          </Grid>
        </GroupBox>
      </StackPanel>
    </local:MyCard>
    <ContentControl Content="历  史  版  本" Template="{StaticResource Separator}" />
    <local:MyCard Margin="0,0,0,15" Title="23w31a" CanSwap="True" IsSwaped="True">
      <StackPanel Margin="30,40,30,20">
        <Border Style="{StaticResource verImgBdr}">
          <Border.Background>
            <ImageBrush ImageSource="https://www.lightbeacon.top/pnh/newsimgs/1_20/23w31a.png" Stretch="Uniform" />
          </Border.Background>
          <Image Source="https://www.lightbeacon.top/pnh/newsimgs/1_20/23w31a.png" Opacity="0" />
        </Border>
        <Border Style="{StaticResource verTxtBdr}">
          <TextBlock Style="{StaticResource verTxtBlk}" Text="23W31A" />
        </Border>
        <TextBlock Text="新实验性特性" Style="{StaticResource h2}" />
        <TextBlock Text="村民交易平衡性调整" Style="{StaticResource h3}" />
        <TextBlock Text="此快照调整了流浪商人和图书管理员的交易，可以通过特性开关启用。如果你想测试新的交易，就必须在创建新世界时在实验菜单中打开。" Margin="20,5,0,5" />
        <TextBlock Text="图书管理员交易调整" Style="{StaticResource h4}" />
        <TextBlock Text="在这次更改之前，玩家可以从任意图书管理员处获得任意附魔书。新手级别的图书管理员就可以出售游戏中最好的附魔书了！对于一些玩家来说，这个特性过于随机，同时在让村民交易与附魔台附魔和结构中搜索相比过于方便。" Margin="20,5,0,5" />
        <TextBlock Text="在全新的规则下，不同生物群系的图书管理员将出售不同的附魔书，而且每个群系都会有一个独特的附魔书，且只会被该群系村庄里的大师级图书管理员出售。" Margin="20,5,0,5" />
        <TextBlock Text="玩家现在必须先，而不是碰运气。我们希望这使图书管理员交易变得更加有趣，同时不同村庄出售的魔咒一定程度上也能提供当地历史文化的线索。" Margin="20,5,0,5" />
        <Image Source="https://www.lightbeacon.top/pnh/newsimgs/Normal/附魔书交易表格.png" Margin="10,0,10,0" MaxHeight="200" />
        <TextBlock Text="附魔书交易表格" Style="{StaticResource imgTitle}" />
        <StackPanel Style="{StaticResource ListStyle}">
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 不同生物群系的图书管理员现在会出售不同的附魔书" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 个群系都分配了一个特殊的附魔书，只有拥有满经验的大师图书管理员才能出售" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 这意味着玩家必须到达全部七个群系才能获得全部附魔书" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 有两个特殊群系，在这些群系中村庄不会自然生成" />
          <StackPanel Style="{StaticResource ListStyle}">
            <Ellipse />
            <TextBlock Style="{StaticResource ListItem}" Text=" 玩家需要自行搭建村庄来获取这些交易！" />
          </StackPanel>
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 一些附魔书已从村民交易中移除，必须要通过其他渠道才能找到" />
        </StackPanel>
        <TextBlock Text="流浪商人交易调整" Style="{StaticResource h4}" />
        <TextBlock Text="一些玩家觉得流浪商人要价太高，卖的东西也没什么用。因此我们降低了交易所需的绿宝石，同时加入了更多交易，并且提升了物品单次可交易的最大次数。流浪商人现在也会从玩家那里收购自己需要的物品。因此即使你不想买东西，也可以向他们提供物品，来帮助他们完成旅程。" Margin="20,5,0,5" />
        <Image Source="https://www.lightbeacon.top/pnh/newsimgs/Normal/流浪商人交易表格.png" Margin="10,0,10,0" MaxHeight="200" />
        <TextBlock Text="流浪商人交易表格" Style="{StaticResource imgTitle}" />
        <StackPanel Style="{StaticResource ListStyle}">
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 流浪商人交易现在需要的绿宝石减少，可交易的最大次数增加" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 流浪商人现在可以出售原木" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 流浪商人现在也会收购物品" />
        </StackPanel>
        <TextBlock Text="更改" Style="{StaticResource h2}" />
        <StackPanel Style="{StaticResource ListStyle}">
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 钻石矿现在在主世界的深板岩层生成更加频繁" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 僵尸村民现在只在第一次被治愈时提供大额交易折扣" />
          <StackPanel Style="{StaticResource ListStyle}">
            <Ellipse />
            <TextBlock Style="{StaticResource ListItem}" Text=" 多次感染并治愈同一个村民后，交易折扣不再翻倍" />
          </StackPanel>
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 创造模式的玩家可以让屏障方块含水" />
          <StackPanel Style="{StaticResource ListStyle}">
            <Ellipse />
            <TextBlock Style="{StaticResource ListItem}" Text=" 无法通过直接交互以外的方式让屏障方块含水，例如使用发射器" />
          </StackPanel>
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 玩家现在在乘坐载具的时候不能够潜行了" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 紫颂花现在不再为悬挂或需要支撑的方块提供支撑面" />
        </StackPanel>
        <TextBlock Text="钻石矿石分布" Style="{StaticResource h3}" />
        <TextBlock Text="在这个快照中，我们提高了钻石矿石在主世界深层生成的概率。从而让在深板岩层中挖取钻石的回报更高。我们期待你的反馈！" Margin="20,5,0,5" />
        <TextBlock Text="技术性更新" Style="{StaticResource h2}" />
        <StackPanel Style="{StaticResource ListStyle}">
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 资源包版本现在为 16" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 数据包版本现在为 16" />
          <Ellipse />
          <TextBlock Style="{StaticResource ListItem}" Text=" 使用过的命令历史现在在本地保存，可以在不同的世界中获取" />
